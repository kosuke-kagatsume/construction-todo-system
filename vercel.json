{
  "version": 2,
  "name": "construction-todo-system",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next",
      "config": {
        "distDir": "frontend/.next"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "frontend/pages/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  "env": {
    "NODE_VERSION": "18.x"
  },
  "functions": {
    "frontend/pages/api/**/*.ts": {
      "runtime": "@vercel/node@2"
    }
  }
}